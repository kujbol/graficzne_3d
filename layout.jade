doctype html
html
    head
        title=Graficzne_3d
        style
            include  css/style.css

        link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
        script(src='http://code.jquery.com/jquery-1.8.0.js')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')

        // Pretty fucked up scripts loading
        script(src='js/lib/math.js')
        script(src='js/lib/3d.js')

        script(src='js/settings/base.js')
        script(src='js/settings/object.js')
        script(src='js/settings/camera.js')
        script(src='js/settings/sphere.js')

        script(src='js/objects/base.js')
        script(src='js/objects/cube.js')
        script(src='js/objects/sphere.js')

        script(src='js/draw/camera.js')
        script(src='js/draw/drawer.js')


        script(src='js/objects/scene.js')

        script(src='js/layout/main.js')
        script(src='js/layout/object_list.js')
        script(src='js/layout/save_file.js')
        script(src='js/app.js')

    body
        nav.navbar.navbar-inverse
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') Graficzne LAB
                .collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a#camer_settings_togle(onclick="show_camera_settings()", href='#', type='button') Camera Settings
                        li
                            a#save_button(onclick="save_file()", href='#', type='button') Save File
                        li
                            input#upload(type="file")
                            a#load_scene(onclick="load_file()", href='#', type='button') Load File
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Add Object
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(onclick="add_object(Cube)", href='#', type='button') Cube
                                li
                                    a(onclick="add_object(Sphere)", href='#', type='button') Sphere
                                li
                                    a(href='#') Something else here
                                li.divider(role='separator')
                                li
                                    a(href='#') Separated link
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#') save_file
        #wrapper.toggled
            #sidebar-wrapper
                #settings_camera

            .col-md-10
                block content
            .col-md-2
                .panel.panel-default(style='box-shadow: 5px 5px 2px #888888;')
                    .panel-heading
                        h3.panel-title
                            | Object Settings
                            span.pull-right
                            select#object_list
                    .panel-body#settings_panel



